/* CSS Document */

@font-face {
	font-family: 'Roboto Light';
	src: url('Roboto-Light.ttf') format('truetype');
}

h1 {
	font-style: italic; 
	font-family: Cambria, 'Hoefler Text', 'Liberation Serif', Times, 'Times New Roman', serif; 
	font-variant: normal; 
	font-weight: lighter;
	color: rgba(127,127,127,1.00);
}

h2 {
	text-decoration: underline;	
	color: rgba(127,127,127,1.00);
}

body {
	overflow:hidden;
	margin: 0px;
}

canvas {
	width: 100vw;
	height: 100vh;
	margin: 0px;
}

#MainMenu {
	text-align: center;
	font-family: 'Roboto Light';
	color: rgba(255,255,255,1.00);
	max-width: 300px;
	margin-left: auto;
	margin-right: auto;
	display:block;	
}

#GameModes {
	-webkit-box-shadow: 0px 0px 5px rgba(103,103,103,1.00);
	box-shadow: 0px 0px 5px rgba(103,103,103,1.00);
}

input[type=button] {
	background-color:rgba(76,249,90,1.00);
	border-color: rgba(0,0,0,0.00);
	-webkit-box-shadow: 1px 1px 1px rgba(98,98,98,1.00);
	box-shadow: 1px 1px 1px rgba(98,98,98,1.00);
	width: 40%;
	cursor:pointer;
}

input[type=button]:hover {
	background-color: rgba(56,189,67,1.00);
}

input[type=radio] {
    display:none; 
    margin:10px;
}

input[type=radio] + label{
	display: inline-block;
	margin-right: 4px;
	margin-left: 4px;
	padding: 4px 12px;
	background-color:hsla(211,71%,52%,1.00);
	border-color: #001786;
	-webkit-box-shadow: 1px 1px 1px rgba(98,98,98,1.00);
	box-shadow: 1px 1px 1px rgba(98,98,98,1.00);
	width: 80%;
	cursor:pointer;
}

input[type=radio]:checked + label {
	background-image: none;
	background-color: hsla(211,65%,46%,1.00);	
}

input[type=radio] + label:hover {
	background-image: none;
	width: 85%;
	background-color: hsla(211,65%,46%,1.00);	
}
